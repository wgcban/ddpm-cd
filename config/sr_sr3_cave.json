{
    "name": "pansharpening-CAVE-SR3-feature-diff",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        //"resume_state": null
        "resume_state": "/media/lidan/ssd2/diff-large-files/experiments/pansharpening-CAVE-SR3-feature-diff_220409_110725/checkpoint/I90000_E6000"
        //"resume_state": "experiments/sr_ffhq_210806_204158/checkpoint/I640000_E32" //pretrain model or training state
    },
    "datasets": {
        "train": {
            "name": "cave_64_256_train",
            "mode": "HR", // whether need LR img
            "dataroot": "dataset/cave/train",
            "datatype": "mat", //lmdb or img, path of img files
            "l_resolution": 64, // low resolution need to super_resolution
            "r_resolution": 256, // high resolution
            "batch_size": 8,
            "num_workers": 2,
            "use_shuffle": true,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "cave_64_256_val",
            "mode": "HR",
            "dataroot": "dataset/cave/val",
            "datatype": "mat", //lmdb or img, path of img files
            "l_resolution": 64,
            "r_resolution": 256,
            "data_len": 50 // data length in validation 
        },  
        "RGB": {
            "R": 23,
            "G": 13,
            "B": 6}
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": true,
        "unet": {
            "in_channel": 31,
            "out_channel": 31,
            "inner_channel": 128,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 256,
            "channels": 31, //sample channel
            "loss": "l2", //options "l1" or "l2"
            "model_hsi": true,
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 1e4,
        "save_checkpoint_freq": 1e4,
        "print_freq": 200,
        "optimizer": {
            "type": "adam",
            "lr": 1e-5
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "sr_cave"
    }
}