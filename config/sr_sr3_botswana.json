{
    "name": "pansharpening-botswana-poojan",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
        //"resume_state": "./../diff-large-files/experiments/sr_ffhq_210806_204158/checkpoint/I830000_E32"
        //"resume_state": "experiments/sr_ffhq_210806_204158/checkpoint/I640000_E32" //pretrain model or training state
    },
    "datasets": {
        "train": {
            "name": "botswana_32_128_train",
            "mode": "HR", // whether need LR img
            "dataroot": "dataset/botswana/train",
            "datatype": "mat", //lmdb or img, path of img files
            "l_resolution": 32, // low resolution need to super_resolution
            "r_resolution": 128, // high resolution
            "batch_size": 8,
            "num_workers": 2,
            "use_shuffle": true,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "botswana_32_128_val",
            "mode": "HR",
            "dataroot": "dataset/botswana/val",
            "datatype": "mat", //lmdb or img, path of img files
            "l_resolution": 32,
            "r_resolution": 128,
            "data_len": 50 // data length in validation 
        },  
        "RGB": {
            "R": 29,
            "G": 20,
            "B": 12}
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 145,
            "out_channel": 145,
            "inner_channel": 128,
            "channel_multiplier": [
                1,
                2,
                4,
                //8,
                //8
                16
            ],
            "attn_res": [
                //16
            ],
            "res_blocks": 1,
            "dropout": 0.0
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "quad",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "quad",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 128,
            "channels": 145, //sample channel
            "loss": "l2", //options "l1" or "l2"
            "model_hsi": true,
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 1e4,
        "save_checkpoint_freq": 1e4,
        "print_freq": 100,
        "optimizer": {
            "type": "adam",
            "lr": 1e-5
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "sr_botswana_poojan"
    }
}